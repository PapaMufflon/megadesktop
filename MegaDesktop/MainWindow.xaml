<Window x:Class="MegaDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:e="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:behaviours="clr-namespace:MegaDesktop.Ui"
        xmlns:megaDesktop="clr-namespace:MegaDesktop"
        Title="Mega Desktop (v0.75 beta)" Height="500" Width="800" MinHeight="500" MinWidth="500"
        WindowStyle="None" AllowsTransparency="True" ResizeMode="CanResizeWithGrip"
        MouseDown="MainWindow_OnMouseDown"
        Icon="pack://application:,,,/m.ico" AllowDrop="True" DragEnter="Window_DragEnter_1" Drop="Window_Drop_1">
    <Window.Resources>
        <megaDesktop:TypeToImageConverter x:Key="TypeToImageConverter" />
    </Window.Resources>
    <DockPanel>
        <!--<Ribbon DockPanel.Dock="Top">
            <Ribbon.ApplicationMenu>
                <RibbonApplicationMenu KeyTip="A">
                    <RibbonApplicationMenuItem Header="Login"
                                               Command="{Binding LoginCommand}"
                                               KeyTip="L"
                                               ImageSource="pack://application:,,,/MegaDesktop;component/resources/login.png" />
                    <RibbonApplicationMenuItem Header="Logout"
                                               Command="{Binding LogoutCommand}"
                                               KeyTip="O"
                                               ImageSource="pack://application:,,,/MegaDesktop;component/resources/logout.png" />
                </RibbonApplicationMenu>
            </Ribbon.ApplicationMenu>
        </Ribbon>-->
        <DockPanel DockPanel.Dock="Bottom" Height="25" VerticalAlignment="Bottom">
            <TextBox Padding="3" HorizontalAlignment="Left" Text="{Binding Status.Message}" FontSize="14"
                     IsReadOnly="True" BorderThickness="0" />
        </DockPanel>
        <DataGrid DockPanel.Dock="Bottom"
                  ItemsSource="{Binding Transfers}"
                  AutoGenerateColumns="False"
                  HeadersVisibility="None"
                  MaxHeight="200">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Name}" />
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ProgressBar Width="100" Maximum="100" Value="{Binding Progress, Mode=OneWay}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Binding="{Binding Status}" />
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Cancel" Command="{Binding CancelCommand}" CommandParameter="{Binding}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Row="0" Grid.ColumnSpan="2" Background="Black">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                </Grid>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Image Source="pack://application:,,,/MegaDesktop;component/resources/Mega.png"
                           HorizontalAlignment="Left" Width="128" Height="26"
                           Margin="16,0,10,0" />
                    <TextBlock Text="{x:Static megaDesktop:Resource.Desktop}" Foreground="#9d220c" Margin="0,26,0,0" />
                </StackPanel>
                
                <StackPanel Grid.Column="1" HorizontalAlignment="Right" Orientation="Horizontal">
                    <Button Content="{x:Static megaDesktop:Resource.LogIn}"
                            Command="{Binding LoginCommand}"
                            Style="{StaticResource MegaButtonStyle}"
                            Margin="0,0,8,0" />
                    <Button Content="{x:Static megaDesktop:Resource.LogOut}"
                            Command="{Binding LogoutCommand}"
                            Style="{StaticResource MegaButtonStyle}"
                            Margin="0,0,24,0" />
                    <Button Content="{x:Static megaDesktop:Resource.Exit}"
                            Command="{Binding ExitCommand}"
                            Style="{StaticResource MegaButtonStyle}"
                            Margin="0,0,8,0" />
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1" Grid.Column="0" Background="#d11e00" Width="200">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Image Source="../Resources/cloud.png" Width="30" Height="30" HorizontalAlignment="Center" Grid.Column="0" />
                <TextBlock Text="File manager" Foreground="White" FontSize="15"
                           VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="1" />
            </Grid>

            <TreeView Grid.Row="2" Grid.Column="0" ItemsSource="{Binding RootNode.ChildNodes}" Background="#f2f2f3"
                      ItemContainerStyle="{StaticResource TreeViewItemStyle1}">
                <e:Interaction.Behaviors>
                    <behaviours:BindableSelectedItemBehavior SelectedItem="{Binding SelectedTreeNode, Mode=OneWayToSource}" />
                </e:Interaction.Behaviors>
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding ChildNodes}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <Image x:Name="itemImage"
                                   Source="{Binding Type, Converter={StaticResource TypeToImageConverter}}"
                                   Width="22" Height="22" />
                            <TextBlock Grid.Column="1" Text="{Binding Name}" FontSize="13" FontStretch="Normal" VerticalAlignment="Center" Margin="8,0,0,0" />
                        </Grid>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>

            <StackPanel Grid.Row="1"
                        Grid.Column="1"
                        Orientation="Horizontal">
                <Button Command="{Binding UploadCommand}"
                        CommandParameter="{Binding SelectedNode, Mode=OneWay}"
                        ToolTip="{x:Static megaDesktop:Resource.UploadFile}"
                        Margin="8,0,0,0" Height="32" Width="42">
                    <Button.Content>
                        <Image Width="22" Height="20" Source="pack://application:,,,/MegaDesktop;component/resources/UploadFile.png" />
                    </Button.Content>
                </Button>
                <Button Command="{Binding UploadFolderCommand}"
                        CommandParameter="{Binding SelectedNode, Mode=OneWay}"
                        ToolTip="{x:Static megaDesktop:Resource.UploadFolder}"
                        Margin="2,0,0,0" Height="32" Width="42">
                    <Button.Content>
                        <Image Width="22" Height="20" Source="pack://application:,,,/MegaDesktop;component/resources/UploadFolder.png" />
                    </Button.Content>
                </Button>
                <Button Command="{Binding DownloadCommand}"
                        CommandParameter="{Binding SelectedNode, Mode=OneWay}"
                        ToolTip="{x:Static megaDesktop:Resource.Download}"
                        Margin="8,0,0,0" Height="32" Width="42">
                    <Button.Content>
                        <Image Width="22" Height="20" Source="pack://application:,,,/MegaDesktop;component/resources/download.png" />
                    </Button.Content>
                </Button>
                <Button Command="{Binding DeleteCommand}"
                        CommandParameter="{Binding SelectedNode, Mode=OneWay}"
                        ToolTip="{x:Static megaDesktop:Resource.Delete}"
                        Margin="2,0,0,0" Height="32" Width="42">
                    <Button.Content>
                        <Image Width="22" Height="20" Source="pack://application:,,,/MegaDesktop;component/resources/Delete.png" />
                    </Button.Content>
                </Button>
                <Button Command="{Binding RefreshCommand}"
                        CommandParameter="{Binding SelectedNode, Mode=OneWay}"
                        ToolTip="{x:Static megaDesktop:Resource.Refresh}"
                        Margin="8,0,0,0" Height="32" Width="42">
                    <Button.Content>
                        <Image Width="22" Height="20" Source="pack://application:,,,/MegaDesktop;component/resources/refresh.png" />
                    </Button.Content>
                </Button>
            </StackPanel>

            <DataGrid Grid.Column="1"
                      Grid.Row="2"
                      ItemsSource="{Binding SelectedTreeNode.Children}"
                      SelectedItem="{Binding SelectedListNode, Mode=OneWayToSource}"
                      IsReadOnly="True"
                      CanUserAddRows="False" CanUserDeleteRows="False"
                      CanUserResizeColumns="True" CanUserResizeRows="True"
                      CanUserSortColumns="True" CanUserReorderColumns="True"
                      AutoGenerateColumns="False"
                      AlternatingRowBackground="#f7f8fa"
                      HeadersVisibility="Column"
                      GridLinesVisibility="Horizontal"
                      CellStyle="{StaticResource DataGridCellStyle}"
                      ColumnHeaderStyle="{StaticResource ColumnHeaderStyle}">
                <behaviours:DataGridHelper.TextColumnStyle>
                    <Style TargetType="TextBlock">
                        <Setter Property="FontFamily" Value="Open Sans" />
                        <Setter Property="FontSize" Value="13" />
                        <Setter Property="FontWeight" Value="Normal" />
                        <Setter Property="FontStretch" Value="ExtraExpanded" />
                        <Setter Property="Foreground" Value="Black" />
                    </Style>
                </behaviours:DataGridHelper.TextColumnStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="{x:Static megaDesktop:Resource.Name}"
                                        MinWidth="300"
                                        Binding="{Binding Name}" />
                    <DataGridTextColumn Header="{x:Static megaDesktop:Resource.Size}"
                                        MinWidth="80"
                                        Binding="{Binding Size}" />
                    <DataGridTextColumn Header="{x:Static megaDesktop:Resource.LastModified}"
                                        Width="*"
                                        Binding="{Binding LastModified}" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </DockPanel>
</Window>